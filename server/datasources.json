{
  "db": {
    "name": "db",
    "connector": "memory"
  },
  "twitter": {
    "name": "twitter",
    "connector": "rest",
    "debug": false,
    "crud": false,
    "headers": {
      "accepts": "application/json",
      "content-type": "application/json"
    },
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "https://api.twitter.com/1.1/trends/place",
          "query": {
            "id": "{^id=1:number}",
          }
        },
        "functions": {
          "getTrends": ["id"]
        }
      }
    ]
  }
}
